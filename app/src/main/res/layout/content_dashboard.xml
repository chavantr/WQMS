<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_dashboard"
        tools:context=".DashboardActivity">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/select_location"
              android:layout_marginTop="16dp" android:id="@+id/lblLocation"
              android:padding="10dp" app:layout_constraintTop_toTopOf="parent"
              android:gravity="center_vertical" android:textColor="@color/colorAccent"
              android:drawableEnd="@drawable/ic_location_city_black_24dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/lblInfo"
              app:layout_constraintTop_toBottomOf="@id/lblLocation" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:textColor="@color/colorAccent" android:padding="10dp"
              android:text="@string/sensor_info" android:drawableEnd="@drawable/ic_info_black_24dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/lblPh"
              android:padding="10dp" app:layout_constraintTop_toBottomOf="@id/lblInfo" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:textColor="@color/colorAccent"
              android:text="@string/ph_level_is" android:gravity="center_vertical"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/lblTemperature"
              android:padding="10dp" app:layout_constraintTop_toBottomOf="@id/lblPh" android:layout_marginTop="16dp"
              android:textColor="@color/colorAccent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:text="@string/temperature_is" android:gravity="center_vertical"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/lblInstruction"
              android:padding="10dp" app:layout_constraintTop_toBottomOf="@id/lblTemperature"
              android:layout_marginTop="16dp"
              android:textColor="@color/colorAccent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:text="@string/temperature_is" android:gravity="center_vertical"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" app:layout_constraintTop_toBottomOf="@id/lblInstruction"
              android:textColor="@color/colorAccent" android:text="@string/turbo"
              android:padding="10dp"
              android:layout_height="wrap_content" android:id="@+id/lblTurbo" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" app:layout_constraintTop_toBottomOf="@id/lblTurbo"
              android:textColor="@color/colorAccent" android:text="@string/soil_is"
              android:padding="10dp"
              android:layout_height="wrap_content" android:id="@+id/lblSoil" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" app:layout_constraintTop_toBottomOf="@id/lblSoil"
              android:textColor="@color/colorAccent" android:text="@string/next_is"
              android:padding="10dp"
              android:layout_height="wrap_content" android:id="@+id/lblNext" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


</android.support.constraint.ConstraintLayout>